@model WebGradu.Models.Categoria

<div class="modal fade" id="modalCreateCategoria" tabindex="-1" aria-hidden="true" aria-labelledby="titleCreateCategoria">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="titleCreateCategoria" class="modal-title">Crear categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formCreateCategoria" asp-action="Create" asp-controller="Categorias" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="NombreCategoria" class="form-label">Nombre de la categoría</label>
                        <input asp-for="NombreCategoria" class="form-control form-control-sm" maxlength="80" autocomplete="off" autofocus required />
                        <span asp-validation-for="NombreCategoria" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control form-control-sm" rows="4" maxlength="250" required></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-sm" form="formCreateCategoria">
                    <i class="bi bi-check2-circle me-1"></i> Crear
                </button>
            </div>
        </div>
    </div>
</div>
