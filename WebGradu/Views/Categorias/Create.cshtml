@model WebGradu.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row bg-light p-4 rounded shadow-sm">
                <!-- Imagen -->
                <div class="d-flex align-items-center mb-4 mb-md-0 me-md-4">
                    <img src="~/img/categorias.jpg"
                         alt="Imagen de la Categoría"
                         class="img-fluid rounded"
                         style="max-height: 300px; width: 100%; max-width: 400px; object-fit: cover;">
                </div>

                <!-- Formulario -->
                <div class="card shadow-sm border-0 w-100" style="max-width: 400px;">
                    <div class="card-body">
                        <h2 class="h5 mb-4 text-center">Crear Categoría</h2>

                        <form asp-action="Create" method="post">
                            <div class="mb-3">
                                <label asp-for="NombreCategoria" class="form-label">Nombre de la categoría</label>
                                <input asp-for="NombreCategoria" class="form-control" required />
                                <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label">Descripción de la categoría</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="4" required></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>

                            <div>
                                <button type="submit" class="btn btn-success" style="width: 100px;">
                                    <i class="fa-solid fa-folder-arrow-up"></i> Crear
                                </button>
                                <a asp-action="Index" class="btn btn-warning btn-sm ms-2" title="Ver Lista">Listado</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["CategoriaCreada"] != null)
    {
        <script>
            Swal.fire({
                title: 'Categoría Creada',
                text: 'La categoría ha sido creada exitosamente.',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }
}
